/* components/new-button/new-button.wxss */
button{padding: 0;margin: 0;border: none;}
button::after{padding: 0;margin: 0;content: none;}
.button-out{display: flex;justify-content: center;align-items: center;}
.button-out-fixed{padding-bottom: calc(20rpx + env(safe-area-inset-bottom));position: fixed;bottom: 0;left: 0;width: 100%;padding-top: 20rpx;}
.button{height: 80rpx;background-color: var(--purple);font-size: 28rpx;color: #fff;border-radius: 70rpx;display: flex;justify-content: center;align-items: center;line-height: 80rpx !important;}
.button-frobidden{height: 80rpx;background-color: rgba(154,100,255,.6);font-size: 28rpx;color: #fff;border-radius: 70rpx;display: flex;justify-content: center;align-items: center;}
.hover-class{background-color: rgba(154,100,255,.6);}

.button-padding{height: 120rpx;}